{% extends "_includes/_layout.njk" %}
{% from "_includes/components/content-item-vertical.njk" import contentItemVertical as contentItemVertical %}
{% from "_includes/components/content-item.njk" import contentItem as contentItem %}
{% from "_includes/components/page.njk" import page as pageComponent %}
{% block title %}Jared Gebel, UX Research and Design{% endblock %}
{% block content %}
    <main class="grid-layout-row lg:my-12 xl:my-13">
        <div class="grid-layout-content flex flex-col items-center gap-10 md:gap-12 xl:gap-13">
            {% include "_includes/_approach.njk" %}
            <div id="background">Background</div>
            <div id="cards">Cards</div>
            <div class="pages flex flex-col px-5 gap-11 lg:gap-12">
                {% for page in pages %}
                    {{ pageComponent(page.heading, page.headline, page.sections, page.cta) }}
                {% endfor %}
            </div>
            <div>Divider</div>
            <div id="contact">Contact</div>
        </div>
    </main>
{% endblock %}