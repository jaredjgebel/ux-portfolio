{
  "scripts": {
    "dev:eleventy": "npx eleventy --serve",
    "dev:tailwind": "npx tailwindcss -i styles/tailwind.css -c styles/tailwind.config.js -o _site/style.css --watch",
    "build:eleventy": "cross-env ELEVENTY_PRODUCTION=true eleventy",
    "build:tailwind": "npx tailwindcss -i styles/tailwind.css -c styles/tailwind.config.js -o _site/style.css --minify",
    "build": "cross-env NODE_ENV=production npm-run-all build:tailwind build:eleventy",
    "start": "npm-run-all --parallel dev:*"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@tailwindcss/typography": "^0.5.4",
    "alpinejs": "^3.7.0",
    "cross-env": "^7.0.3",
    "eleventy-plugin-gen-favicons": "^1.1.0",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "tailwindcss": "^3.1.6"
  },
  "dependencies": {
    "@toycode/markdown-it-class": "^1.2.4",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "markdown-it-anchor": "^8.6.4",
    "markdown-it-attrs": "^4.1.4",
    "markdown-it-container": "^3.0.0"
  }
}
