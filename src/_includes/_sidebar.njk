{% import "./components/sidebar-nav-item.njk" as navbaritem %}
<nav id="sidebar" class="hidden lg:grid lg:pt-10 lg:sticky lg:top-0 w-[256px] h-screen overflow-y-auto bg-primary-70">
    <ul id="sidebar-nav" class="col-start-2 col-span-6">
        {% for item in sidebarItems %}
            {% if item.type === 'menulabel' %}
                {{ navbaritem.label(item.text, item.link) }}
            {% endif %}
            {% if item.type === 'sectionlabel' %}
                {{ navbaritem.sectionlabel(item.text) }}
            {% endif %}
        {% endfor %}
    </ul>
</nav>