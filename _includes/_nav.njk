<div
    x-data="{ isToggled: false }"
    @resize.debounce.100.window="isToggled = (window.innerWidth < 1056) ? isToggled : false">
    <nav class="lg:hidden bg-primary-70 h-9 flex pl-3 items-center" @keydown.escape="isToggled = false">
        <button
            class="p-3 rounded-sm focus:outline-neutral-0 focus:outline-dashed focus:outline-1"
            @click="() => { isToggled = !isToggled }">
            {% include "_includes/svg/_hamburger-menu.njk" %}
        </button>
    </nav>
    <div class="lg:hidden">
        {% include "_includes/_menu.njk"%}
    </div>
</div>