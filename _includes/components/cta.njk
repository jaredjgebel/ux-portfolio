{% from "./icon.njk" import icon as iconComponent %}
{% macro cta(icon, text, link) %}
    <a href="#" class="cta flex px-3 pb-3 pt-[5px] gap-3 rounded-[4px] sm-body-featured text-primary-70">
        <div class="shrink-0">{{ iconComponent("", icon) }}</div>
        <div class="sm-body-featured">{{ text }}</div>
    </a>
{% endmacro %}