{% from "./icon.njk" import icon %}
{% macro cta(iconType, text, link) %}
    <a href={{ link }} class="cta flex w-fit px-3 pb-3 pt-[5px] gap-3 rounded-[4px] group focus:outline focus:outline-2 active:outline active:outline-2 active:outline-primary-50 ">
        {% if iconType === "figma" %}
            <div class="shrink-0 pt-[6px]">{{ icon("small", iconType, "stroke-primary-70 group-hover:stroke-primary-50 group-active:stroke-primary-50") }}</div>
        {% else %}
            <div class="shrink-0 pt-[6px]">{{ icon("small", iconType, "fill-primary-70 group-hover:fill-primary-50 group-active:fill-primary-50") }}</div>
        {% endif %}
        <span class="sm-body-featured text-primary-70 group-hover:text-primary-50 group-active:text-primary-50 relative top-[0.27rem]">{{ text }}</span>
    </a>
{% endmacro %}