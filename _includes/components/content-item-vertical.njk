{% from "./icon-area.njk" import iconArea as iconArea %}
{% macro contentItemVertical(heading, subheadings, size, icon) %}
    <div class="content-item-vertical flex flex-col items-center gap-5">
        <div class="heading-area flex flex-row items-center gap-3 w-full">
            {{ iconArea(size, icon) }}
            <h3 class="sm-heading-3">{{ heading }}</h3>
        </div>
        <div class="horizontal-line w-full h-1 bg-neutral-30"></div>
        <div class="subheadings flex flex-col w-full gap-3">
            {% for subheading in subheadings %}
                <p class="subheading sm-paragraph-short">{{ subheading }}</p>
            {% endfor %}
        </div>
    </div>
{% endmacro %}