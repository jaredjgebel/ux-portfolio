{% from "./icon.njk" import icon as icon %}
{% macro card(title, subtitle, iconName, iconClasses, bgColor, cardClasses,  link) %}
    <a href="{{ link }}">
        <div class="card bg-neutral-0 shadow-md w-72 h-80 rounded-md hover:mix-blend-multiply focus:outline focus:outline-2
                focus:outline-primary-80 active:outline active:outline-2 active:outline-primary-80 {{ cardClasses }}">
            <div class="flex flex-col items-center justify-center icon-area rounded-t-md h-1/2 {{ iconClasses }} {{ bgColor }}">
                {{ icon("large", iconName, iconClasses) }}
            </div>
            <div class="card-information flex flex-col items-end p-4 h-1/2">
                <div class="card-text flex flex-col justify-between flex-grow">
                    <h3 class="sm-heading-3 lg:lg-heading-3 xl:xl-heading-3">{{ title }}</h3>
                    <p class="subtitle sm-paragraph-short lg:lg-paragraph-short xl:xl-paragraph-short">{{ subtitle }}</p>
                </div>
                {{ icon("small", "arrow-right", "flex-grow-0 fill-neutral-90") }}
            </div>
        </div>
    </a>
{% endmacro %}