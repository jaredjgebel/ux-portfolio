        <div class="icon-area flex items-center justify-center w-11 h-11 bg-neutral-0 rounded-2xl">
            {% include "../svg/user-bubbles.njk" %}
        </div>
    {% endif %}
    {% if size === "sm" and icon === "Road"%}
        <div class="icon-area flex items-center justify-center w-11 h-11 bg-neutral-0 rounded-2xl">
            {% include "../svg/road.njk" %}
        </div>
    {% endif %}
    {% if size === "sm" and icon === "Monitor"%}
        <div class="icon-area flex items-center justify-center w-11 h-11 bg-neutral-0 rounded-2xl">
            {% include "../svg/monitor.njk" %}
        </div>
    {% endif %}
{% endmacro %}